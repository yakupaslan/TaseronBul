@model List<TaseronBul.Models.GuncelT>
@{
    ViewBag.Title = "GuncelTeklif";
}
<br />
<div class="col-md-4">
    <ul class="nav nav-pills nav-stacked">
        <li ><a href='@Url.Action("Kontrol", "Profil")'>Bilgilerim</a></li>
        <li class="active"><a href='@Url.Action("GuncelTeklif", "Profil")'>Güncel Teklifler</a></li>
        <li><a href='@Url.Action("AlinanIs", "Profil")'>Alınan İşler</a></li>
        <li><a href="#">İlan Ara</a></li>
    </ul>
</div>
<div class="col-md-8">
     <br />
    <div class="panel panel-primary">
            <!-- Default panel contents -->
            <div class="panel-heading">Açık İhale Tekliflerim</div>
            <table class="table">
                <tr>
                    <td><b>Açıklama</b></td>
                    <td><b>Son Tarih</b></td>
                    <td><b>Fiyat</b></td>
                    <td><b>Tür</b></td>
                    <td><b>İlan</b> </td>
                </tr>
                @for (int i = 0; i < Model.Count; i++)
                {
                    string tur;
                    if (Model[i].tur==false)
                    {
                        tur = "Açık İhale";
                    }
                    else
                    {
                        continue;
                    }
                    <tr>
                        <td>
                            
                            @Html.DisplayFor(modelItem => Model[i].Aciklama)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model[i].Tarih)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model[i].Fiyat)
                        </td>
                         <td>
                            @Html.DisplayFor(modelItem => tur)
                        </td>
                        <td>
                            <p>
                                <a class="btn btn-danger btn xs" ; href='@Url.Action("IlanKontT", "Ilan", new { id = Model[i].IlanNo })'>İlan Ayrıntı </a>
                                <a class="btn btn-danger btn xs" ; href="#">İptal </a>
                            </p>
                    </tr>
                }

            </table>
        </div>
     <div class="panel panel-primary">
            <!-- Default panel contents -->
            <div class="panel-heading">Kapalı İhale Tekliflerim</div>
            <table class="table">
                <tr>
                    <td><b>Açıklama</b></td>
                    <td><b>Son Tarih</b></td>
                    <td><b>Fiyat</b></td>
                    <td><b>Tür</b></td>
                    <td><b>İlan</b> </td>
                </tr>
                @for (int i = 0; i < Model.Count; i++)
                {
                    string tur;
                    if (Model[i].tur==true)
                    {
                        tur = "Kapalı İhale";
                    }
                    else
                    {
                        continue;
                    }
                    <tr>
                        <td>
                            
                            @Html.DisplayFor(modelItem => Model[i].Aciklama)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model[i].Tarih)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model[i].Fiyat)
                        </td>
                         <td>
                            @Html.DisplayFor(modelItem => tur)
                        </td>
                        <td>
                            <p>
                                <a class="btn btn-danger btn xs" ; href='@Url.Action("IlanKontT", "Ilan", new { id = Model[i].IlanNo })'>İlan Ayrıntı </a>
                                <a class="btn btn-danger btn xs" ; href="#">İptal </a>
                            </p>
                    </tr>
                }

            </table>
        </div>
    </div>
