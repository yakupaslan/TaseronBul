@if (Request.IsAuthenticated) {
    <script>
            
        document.getElementById('giris').style.display = 'none';
        $("#link").show();
    </script>
    
    <text>
        Hoşgeldin, @Html.ActionLink(User.Identity.Name, "Kontrol", "Profil", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" })!
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" })) {
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()">Çıkış</a>
        }
    </text>
} else {
    <ul>
      
        <li  >@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
    <script>
        document.getElementById('link').style.display = 'none';
        $("#giris").show();
    </script>
}
